{
  "repository": "@strapi/Strapi-Design-System",
  "rules": [
    {
      "name": "Icons",
      "path": "packages/strapi-icons/assets/icons",
      "filter": {
        "types": ["vector"]
      },
      "parsers": [
        {
          "name": "replace-string",
          "options": {
            "keys": ["name"],
            "regex": {
              "pattern": "(.*?)\\/",
              "flags": "g"
            },
            "trim": true
          }
        },
        {
          "name": "pascalcasify",
          "options": {
            "keys": ["name"]
          }
        },
        {
          "name": "name-assets-files-by-pattern",
          "options": {
            "pattern": "{{name}}.{{format}}"
          }
        }
      ]
    },
    {
      "name": "Design Tokens / light colors",
      "path": "packages/strapi-design-system/src/themes/lightTheme/light-colors.js",
      "filter": {
        "types": ["color"]
      },
      "parsers": [
        {
          "name": "filter",
          "options": {
            "key": "name",
            "regex": {
              "pattern": "Light mode/",
              "flags": "g"
            }
          }
        },
        {
          "name": "replace-string",
          "options": {
            "keys": ["name"],
            "regex": {
              "pattern": "Light mode/",
              "flags": "g"
            },
            "trim": true
          }
        },
        {
          "name": "to-jss",
          "options": {
            "formatName": "camelCase",
            "formatTokens": {
              "colorFormat": "hex6",
              "fontSizeUnit": "px",
              "shadowFormat": "string"
            },
            "formatConfig": {
              "jssObjectName": "lightColorTokenObject",
              "exportDefault": false,
              "tabWidth": 2,
              "singleQuote": true
            }
          }
        }
      ]
    },
    {
      "name": "Design Tokens / dark colors",
      "path": "packages/strapi-design-system/src/themes/darkTheme/dark-colors.js",
      "filter": {
        "types": ["color"]
      },
      "parsers": [
        {
          "name": "filter",
          "options": {
            "key": "name",
            "regex": {
              "pattern": "Dark mode/",
              "flags": "g"
            }
          }
        },
        {
          "name": "replace-string",
          "options": {
            "keys": ["name"],
            "regex": {
              "pattern": "Dark mode/",
              "flags": "g"
            },
            "trim": true
          }
        },
        {
          "name": "to-jss",
          "options": {
            "formatName": "camelCase",
            "formatTokens": {
              "colorFormat": "hex6",
              "fontSizeUnit": "px",
              "shadowFormat": "string"
            },
            "formatConfig": {
              "jssObjectName": "darkColorTokenObject",
              "exportDefault": false,
              "tabWidth": 2,
              "singleQuote": true
            }
          }
        }
      ]
    },
    {
      "name": "Design Tokens / shadows",
      "path": "packages/strapi-design-system/src/themes/shadows.js",
      "filter": {
        "types": ["shadow"]
      },
      "parsers": [
        {
          "name": "to-jss",
          "options": {
            "formatName": "camelCase",
            "formatTokens": {
              "colorFormat": "rgb",
              "shadowFormat": "string"
            },
            "formatConfig": {
              "jssObjectName": "shadowTokenObject",
              "exportDefault": false,
              "tabWidth": 2,
              "singleQuote": true
            }
          }
        }
      ]
    }
  ]
}
