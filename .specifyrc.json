{
    "repository": "@strapi/Strapi-Design-System",
    "rules": [
        {
            "name": "Icons",
            "path": "src/assets/icons",
            "filter": {
                "types": ["vector"]
            },
            "parsers": [
                {
                    "name": "name-assets-files-by-pattern",
                    "options": {
                      "pattern": "{{name}}.{{format}}"
                    }
                },
                {
                    "name": "kebabcasify",
                    "options": {
                        "keys": ["name"]
                    }
                },
                {
                    "name": "svgo"
                }
            ]
        },
        {
            "name": "Design Tokens / Colors",
            "path": "src/themes/light-theme.js",
            "filter": {
                "types": ["color"]
            },
            "parsers": [
                {
                    "name": "to-jss",
                    "options": {
                        "formatName": "camelCase",
                        "formatTokens": {
                            "colorFormat": "hex6",
                            "textStyleFormat": "classObject"
                        },
                        "formatConfig": {
                            "jssObjectName": "lightTheme",
                            "exportDefault": false,
                            "tabWidth": 2,
                            "singleQuote": true
                        }
                    }
                }
            ]
        }
    ]
}
