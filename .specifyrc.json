{
  "repository": "@strapi/Strapi-Design-System",
  "rules": [
    {
      "name": "Icons",
      "path": "packages/strapi-icons/assets/icons",
      "filter": {
        "types": ["vector"]
      },
      "parsers": [
        {
          "name": "kebabcasify",
          "options": {
            "keys": ["name"]
          }
        },
        {
          "name": "name-assets-files-by-pattern",
          "options": {
            "pattern": "{{name}}.{{format}}"
          }
        }
      ]
    },
    {
      "name": "Design Tokens / colors",
      "path": "packages/strapi-design-system/src/themes/colors.js",
      "filter": {
        "types": ["color"]
      },
      "parsers": [
        {
          "name": "to-jss",
          "options": {
            "formatName": "camelCase",
            "formatTokens": {
              "colorFormat": "hex6",
              "fontSizeUnit": "px",
              "shadowFormat": "string"
            },
            "formatConfig": {
              "jssObjectName": "colorTokenObject",
              "exportDefault": false,
              "tabWidth": 2,
              "singleQuote": true
            }
          }
        }
      ]
    },
    {
      "name": "Design Tokens / shadows",
      "path": "packages/strapi-design-system/src/themes/shadows.js",
      "filter": {
        "types": ["shadow"]
      },
      "parsers": [
        {
          "name": "to-jss",
          "options": {
            "formatName": "camelCase",
            "formatTokens": {
              "colorFormat": "rgb",
              "shadowFormat": "string"
            },
            "formatConfig": {
              "jssObjectName": "shadowTokenObject",
              "exportDefault": false,
              "tabWidth": 2,
              "singleQuote": true
            }
          }
        }
      ]
    }
  ]
}
